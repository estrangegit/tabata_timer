<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:background="@drawable/button_selector">


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.2">

        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/scrollView"
            android:layout_gravity="center_horizontal"
            android:background="#ffffff"
            android:layout_weight="1.42">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#224d88">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="120dp"
                    android:layout_margin="2dp"
                    android:background="#ffffff">

                    <ImageView
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:id="@+id/prepare_iv"
                        android:layout_margin="5dp"
                        android:src="@drawable/prepare" />

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/prepare"
                            android:id="@+id/prepare_title"
                            android:layout_gravity="center_horizontal"
                            android:layout_margin="5dp"
                            android:textSize="25dp"
                            android:textColor="#224d88" />

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="0dp"
                            android:layout_marginRight="10dp">

                            <ImageButton
                                android:id="@+id/act_main_prepare_minus_button"
                                android:layout_gravity="center_vertical"
                                android:padding="0dp"
                                android:background="@drawable/button_selector_minus"
                                android:layout_weight="0.12"
                                android:layout_height="40dp"
                                android:layout_width="33dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="@string/sec"
                                android:id="@+id/act_main_prepare_tv_sec"
                                android:layout_gravity="center_vertical"
                                android:gravity="center"
                                android:layout_weight="2.00"
                                android:textSize="20dp"
                                android:textColor="#224d88"
                                android:textIsSelectable="true" />

                            <ImageButton
                                android:layout_height="40dp"
                                android:id="@+id/act_main_prepare_plus_button"
                                android:layout_gravity="center_vertical"
                                android:background="@drawable/button_selector_plus"
                                android:layout_weight="0.12"
                                android:layout_width="33dp" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>


                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="120dp"
                    android:layout_margin="2dp"
                    android:background="#ffffff">

                    <ImageView
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:id="@+id/work_iv"
                        android:layout_margin="5dp"
                        android:src="@drawable/work" />

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginRight="10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/work"
                            android:id="@+id/work_title"
                            android:layout_gravity="center_horizontal"
                            android:layout_margin="5dp"
                            android:textSize="25dp"
                            android:textColor="#224d88" />

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ImageButton
                                android:layout_width="33dp"
                                android:layout_height="40dp"
                                android:id="@+id/act_main_work_minus_button"
                                android:layout_gravity="center_vertical"
                                android:layout_weight="0.12"
                                android:background="@drawable/button_selector_minus" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="@string/sec"
                                android:id="@+id/act_main_work_tv_sec"
                                android:layout_gravity="center_vertical"
                                android:gravity="center"
                                android:layout_weight="2"
                                android:textSize="20dp"
                                android:textColor="#224d88"
                                android:textIsSelectable="true" />

                            <ImageButton
                                android:layout_width="33dp"
                                android:layout_height="40dp"
                                android:id="@+id/act_main_work_plus_button"
                                android:layout_gravity="center_vertical"
                                android:layout_weight="0.12"
                                android:background="@drawable/button_selector_plus" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="120dp"
                    android:layout_margin="2dp"
                    android:background="#ffffff">

                    <ImageView
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:id="@+id/rest_iv"
                        android:layout_margin="5dp"
                        android:src="@drawable/rest" />

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginRight="10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/rest"
                            android:id="@+id/rest_title"
                            android:layout_gravity="center_horizontal"
                            android:layout_margin="5dp"
                            android:textSize="25dp"
                            android:textColor="#224d88" />

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ImageButton
                                android:layout_width="33dp"
                                android:layout_height="40dp"
                                android:id="@+id/act_main_rest_minus_button"
                                android:layout_gravity="center_vertical"
                                android:layout_weight="0.12"
                                android:background="@drawable/button_selector_minus" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="@string/sec"
                                android:id="@+id/act_main_rest_tv_sec"
                                android:layout_gravity="center_vertical"
                                android:gravity="center"
                                android:layout_weight="2"
                                android:textSize="20dp"
                                android:textColor="#224d88"
                                android:textIsSelectable="true" />

                            <ImageButton
                                android:layout_width="33dp"
                                android:layout_height="40dp"
                                android:id="@+id/act_main_rest_plus_button"
                                android:layout_gravity="center_vertical"
                                android:layout_weight="0.12"
                                android:background="@drawable/button_selector_plus" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="120dp"
                    android:layout_margin="2dp"
                    android:background="#ffffff">

                    <ImageView
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:id="@+id/cycles_iv"
                        android:layout_margin="5dp"
                        android:src="@drawable/cycles" />

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginRight="10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/cycles"
                            android:id="@+id/cycles_title"
                            android:layout_gravity="center_horizontal"
                            android:layout_margin="5dp"
                            android:textSize="25dp"
                            android:textColor="#224d88" />

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ImageButton
                                android:layout_width="33dp"
                                android:layout_height="40dp"
                                android:id="@+id/act_main_cycles_minus_button"
                                android:layout_gravity="center_vertical"
                                android:layout_weight="0.12"
                                android:background="@drawable/button_selector_minus" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="@string/sec"
                                android:id="@+id/act_main_cycles_tv_nb"
                                android:layout_gravity="center_vertical"
                                android:gravity="center"
                                android:layout_weight="2"
                                android:textSize="20dp"
                                android:textColor="#224d88"
                                android:textIsSelectable="true" />

                            <ImageButton
                                android:layout_width="33dp"
                                android:layout_height="40dp"
                                android:id="@+id/act_main_cycles_plus_button"
                                android:layout_gravity="center_vertical"
                                android:layout_weight="0.12"
                                android:background="@drawable/button_selector_plus" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="120dp"
                    android:layout_margin="2dp"
                    android:background="#ffffff">

                    <ImageView
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:id="@+id/nbTabata_iv"
                        android:layout_margin="5dp"
                        android:src="@drawable/tabata_count" />

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginRight="10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/tabata_count"
                            android:id="@+id/tabata_count_title"
                            android:layout_gravity="center_horizontal"
                            android:layout_margin="5dp"
                            android:textSize="25dp"
                            android:textColor="#224d88" />

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ImageButton
                                android:layout_width="33dp"
                                android:layout_height="40dp"
                                android:id="@+id/act_main_nbTabata_minus_button"
                                android:layout_gravity="center_vertical"
                                android:layout_weight="0.12"
                                android:background="@drawable/button_selector_minus" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="@string/sec"
                                android:id="@+id/act_main_nbTabata_tv_nb"
                                android:layout_gravity="center_vertical"
                                android:gravity="center"
                                android:layout_weight="2"
                                android:textSize="20dp"
                                android:textColor="#224d88"
                                android:textIsSelectable="true" />

                            <ImageButton
                                android:layout_width="33dp"
                                android:layout_height="40dp"
                                android:id="@+id/act_main_nbTabata_plus_button"
                                android:layout_gravity="center_vertical"
                                android:layout_weight="0.12"
                                android:background="@drawable/button_selector_plus" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="120dp"
                    android:layout_margin="2dp"
                    android:background="#ffffff">

                    <ImageView
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:id="@+id/rest_tabata_iv"
                        android:layout_margin="5dp"
                        android:src="@drawable/rest_tabata" />

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginRight="10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/rest_tabata"
                            android:id="@+id/rest_tabata_title"
                            android:layout_gravity="center_horizontal"
                            android:layout_margin="5dp"
                            android:textSize="20dp"
                            android:textColor="#224d88" />

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ImageButton
                                android:layout_width="33dp"
                                android:layout_height="40dp"
                                android:id="@+id/act_main_rest_tabata_minus_button"
                                android:layout_gravity="center_vertical"
                                android:layout_weight="0.12"
                                android:background="@drawable/button_selector_minus" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="@string/sec"
                                android:id="@+id/act_main_rest_tabata_tv_sec"
                                android:layout_gravity="center_vertical"
                                android:gravity="center"
                                android:layout_weight="2"
                                android:textSize="20dp"
                                android:textColor="#224d88"
                                android:textIsSelectable="true" />

                            <ImageButton
                                android:layout_width="33dp"
                                android:layout_height="40dp"
                                android:id="@+id/act_main_rest_tabata_plus_button"
                                android:layout_gravity="center_vertical"
                                android:layout_weight="0.12"
                                android:background="@drawable/button_selector_plus" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="120dp"
                    android:layout_margin="2dp"
                    android:background="#ffffff">

                    <ImageView
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:id="@+id/cool_down_iv"
                        android:layout_margin="5dp"
                        android:src="@drawable/cool_down" />

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginRight="10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/cool_down"
                            android:id="@+id/cool_down_title"
                            android:layout_gravity="center_horizontal"
                            android:layout_margin="5dp"
                            android:textSize="25dp"
                            android:textColor="#224d88" />

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ImageButton
                                android:layout_width="33dp"
                                android:layout_height="40dp"
                                android:id="@+id/act_main_cool_down_minus_button"
                                android:layout_gravity="center_vertical"
                                android:layout_weight="0.12"
                                android:background="@drawable/button_selector_minus" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="@string/sec"
                                android:id="@+id/act_main_cool_down_tv_sec"
                                android:layout_gravity="center_vertical"
                                android:gravity="center"
                                android:layout_weight="2"
                                android:textSize="20dp"
                                android:textColor="#224d88"
                                android:textIsSelectable="true" />

                            <ImageButton
                                android:layout_width="33dp"
                                android:layout_height="40dp"
                                android:id="@+id/act_main_cool_down_plus_button"
                                android:layout_gravity="center_vertical"
                                android:layout_weight="0.12"
                                android:background="@drawable/button_selector_plus" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.8"
        android:background="#ffffff"
        android:layout_margin="5dp">

        <Button
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:text="@string/start"
            android:id="@+id/act_main_start_button"
            android:layout_gravity="center_horizontal"
            android:layout_margin="0dp"
            android:textColor="#ffffff"
            android:textSize="40dp"
            android:elevation="1dp"
            android:background="@drawable/button_selector" />
    </LinearLayout>

</LinearLayout>