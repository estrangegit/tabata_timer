<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/button_selector"
    android:orientation="vertical"
    android:weightSum="1">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.2"
        android:orientation="horizontal">

        <ScrollView
            android:id="@+id/act_tabata_edit_scrollView"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1.42"
            android:background="#ffffff">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#224d88"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="120dp"
                    android:layout_margin="2dp"
                    android:background="#ffffff"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/act_tabata_edit_name_iv"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_margin="5dp"
                        android:src="@drawable/name" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/act_tabata_edit_name_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_margin="5dp"
                            android:text="@string/title"
                            android:textColor="#224d88"
                            android:textSize="25dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="0dp"
                            android:layout_marginRight="10dp"
                            android:orientation="horizontal">


                            <EditText
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:inputType="textPersonName"
                                android:text="Tabata"
                                android:ems="10"
                                android:id="@+id/act_tabata_edit_name_ed"
                                android:layout_weight="1"
                                android:gravity="center_vertical|center" />
                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="120dp"
                    android:layout_margin="2dp"
                    android:background="#ffffff"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/act_tabata_edit_prepare_iv"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_margin="5dp"
                        android:src="@drawable/prepare" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/act_tabata_edit_prepare_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_margin="5dp"
                            android:text="@string/prepare"
                            android:textColor="#224d88"
                            android:textSize="25dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="0dp"
                            android:layout_marginRight="10dp"
                            android:orientation="horizontal">

                            <ImageButton
                                android:id="@+id/act_tabata_edit_prepare_minus_button"
                                android:layout_width="33dp"
                                android:layout_height="40dp"
                                android:layout_gravity="center_vertical"
                                android:layout_weight="0.12"
                                android:background="@drawable/button_selector_minus"
                                android:padding="0dp" />

                            <TextView
                                android:id="@+id/act_tabata_edit_prepare_tv_sec"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_gravity="center_vertical"
                                android:layout_weight="2.00"
                                android:gravity="center"
                                android:text="@string/sec"
                                android:textColor="#224d88"
                                android:textIsSelectable="true"
                                android:textSize="20dp" />

                            <ImageButton
                                android:id="@+id/act_tabata_edit_prepare_plus_button"
                                android:layout_width="33dp"
                                android:layout_height="40dp"
                                android:layout_gravity="center_vertical"
                                android:layout_weight="0.12"
                                android:background="@drawable/button_selector_plus" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="120dp"
                    android:layout_margin="2dp"
                    android:background="#ffffff"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/act_tabata_edit_work_iv"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_margin="5dp"
                        android:src="@drawable/work" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginRight="10dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/act_tabata_edit_work_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_margin="5dp"
                            android:text="@string/work"
                            android:textColor="#224d88"
                            android:textSize="25dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <ImageButton
                                android:id="@+id/act_tabata_edit_work_minus_button"
                                android:layout_width="33dp"
                                android:layout_height="40dp"
                                android:layout_gravity="center_vertical"
                                android:layout_weight="0.12"
                                android:background="@drawable/button_selector_minus" />

                            <TextView
                                android:id="@+id/act_tabata_edit_work_tv_sec"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_gravity="center_vertical"
                                android:layout_weight="2"
                                android:gravity="center"
                                android:text="@string/sec"
                                android:textColor="#224d88"
                                android:textIsSelectable="true"
                                android:textSize="20dp" />

                            <ImageButton
                                android:id="@+id/act_tabata_edit_work_plus_button"
                                android:layout_width="33dp"
                                android:layout_height="40dp"
                                android:layout_gravity="center_vertical"
                                android:layout_weight="0.12"
                                android:background="@drawable/button_selector_plus" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="120dp"
                    android:layout_margin="2dp"
                    android:background="#ffffff"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/act_tabata_edit_rest_iv"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_margin="5dp"
                        android:src="@drawable/rest" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginRight="10dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/act_tabata_edit_rest_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_margin="5dp"
                            android:text="@string/rest"
                            android:textColor="#224d88"
                            android:textSize="25dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <ImageButton
                                android:id="@+id/act_tabata_edit_rest_minus_button"
                                android:layout_width="33dp"
                                android:layout_height="40dp"
                                android:layout_gravity="center_vertical"
                                android:layout_weight="0.12"
                                android:background="@drawable/button_selector_minus" />

                            <TextView
                                android:id="@+id/act_tabata_edit_rest_tv_sec"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_gravity="center_vertical"
                                android:layout_weight="2"
                                android:gravity="center"
                                android:text="@string/sec"
                                android:textColor="#224d88"
                                android:textIsSelectable="true"
                                android:textSize="20dp" />

                            <ImageButton
                                android:id="@+id/act_tabata_edit_rest_plus_button"
                                android:layout_width="33dp"
                                android:layout_height="40dp"
                                android:layout_gravity="center_vertical"
                                android:layout_weight="0.12"
                                android:background="@drawable/button_selector_plus" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="120dp"
                    android:layout_margin="2dp"
                    android:background="#ffffff"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/act_tabata_edit_cycles_iv"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_margin="5dp"
                        android:src="@drawable/cycles" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginRight="10dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/act_tabata_edit_cycles_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_margin="5dp"
                            android:text="@string/cycles"
                            android:textColor="#224d88"
                            android:textSize="25dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <ImageButton
                                android:id="@+id/act_tabata_edit_cycles_minus_button"
                                android:layout_width="33dp"
                                android:layout_height="40dp"
                                android:layout_gravity="center_vertical"
                                android:layout_weight="0.12"
                                android:background="@drawable/button_selector_minus" />

                            <TextView
                                android:id="@+id/act_tabata_edit_cycles_tv_nb"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_gravity="center_vertical"
                                android:layout_weight="2"
                                android:gravity="center"
                                android:text="@string/sec"
                                android:textColor="#224d88"
                                android:textIsSelectable="true"
                                android:textSize="20dp" />

                            <ImageButton
                                android:id="@+id/act_tabata_edit_cycles_plus_button"
                                android:layout_width="33dp"
                                android:layout_height="40dp"
                                android:layout_gravity="center_vertical"
                                android:layout_weight="0.12"
                                android:background="@drawable/button_selector_plus" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="120dp"
                    android:layout_margin="2dp"
                    android:background="#ffffff">

                    <ImageView
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:id="@+id/act_tabata_edit_nbTabata_iv"
                        android:layout_margin="5dp"
                        android:src="@drawable/tabata_count" />

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginRight="10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/tabata_count"
                            android:id="@+id/act_tabata_edit_nbTabata_title"
                            android:layout_gravity="center_horizontal"
                            android:layout_margin="5dp"
                            android:textSize="25dp"
                            android:textColor="#224d88" />

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ImageButton
                                android:layout_width="33dp"
                                android:layout_height="40dp"
                                android:id="@+id/act_tabata_edit_nbTabata_minus_button"
                                android:layout_gravity="center_vertical"
                                android:layout_weight="0.12"
                                android:background="@drawable/button_selector_minus" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="@string/sec"
                                android:id="@+id/act_tabata_edit_nbTabata_tv_nb"
                                android:layout_gravity="center_vertical"
                                android:gravity="center"
                                android:layout_weight="2"
                                android:textSize="20dp"
                                android:textColor="#224d88"
                                android:textIsSelectable="true" />

                            <ImageButton
                                android:layout_width="33dp"
                                android:layout_height="40dp"
                                android:id="@+id/act_tabata_edit_nbTabata_plus_button"
                                android:layout_gravity="center_vertical"
                                android:layout_weight="0.12"
                                android:background="@drawable/button_selector_plus" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="120dp"
                    android:layout_margin="2dp"
                    android:background="#ffffff">

                    <ImageView
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:id="@+id/act_tabata_edit_rest_tabata_iv"
                        android:layout_margin="5dp"
                        android:src="@drawable/rest_tabata" />

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginRight="10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/rest_tabata"
                            android:id="@+id/act_tabata_edit_rest_tabata_title"
                            android:layout_gravity="center_horizontal"
                            android:layout_margin="5dp"
                            android:textColor="#224d88"
                            android:textSize="20dp" />

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ImageButton
                                android:layout_width="33dp"
                                android:layout_height="40dp"
                                android:id="@+id/act_tabata_edit_rest_tabata_minus_button"
                                android:layout_gravity="center_vertical"
                                android:layout_weight="0.12"
                                android:background="@drawable/button_selector_minus" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="@string/sec"
                                android:id="@+id/act_tabata_edit_rest_tabata_tv_sec"
                                android:layout_gravity="center_vertical"
                                android:gravity="center"
                                android:layout_weight="2"
                                android:textSize="20dp"
                                android:textColor="#224d88"
                                android:textIsSelectable="true" />

                            <ImageButton
                                android:layout_width="33dp"
                                android:layout_height="40dp"
                                android:id="@+id/act_tabata_edit_rest_tabata_plus_button"
                                android:layout_gravity="center_vertical"
                                android:layout_weight="0.12"
                                android:background="@drawable/button_selector_plus" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="120dp"
                    android:layout_margin="2dp"
                    android:background="#ffffff">

                    <ImageView
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:id="@+id/act_tabata_edit_cool_down_iv"
                        android:layout_margin="5dp"
                        android:src="@drawable/cool_down" />

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginRight="10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/cool_down"
                            android:id="@+id/act_tabata_edit_cool_down_title"
                            android:layout_gravity="center_horizontal"
                            android:layout_margin="5dp"
                            android:textSize="25dp"
                            android:textColor="#224d88" />

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ImageButton
                                android:layout_width="33dp"
                                android:layout_height="40dp"
                                android:id="@+id/act_tabata_edit_cool_down_minus_button"
                                android:layout_gravity="center_vertical"
                                android:layout_weight="0.12"
                                android:background="@drawable/button_selector_minus" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="@string/sec"
                                android:id="@+id/act_tabata_edit_cool_down_tv_sec"
                                android:layout_gravity="center_vertical"
                                android:gravity="center"
                                android:layout_weight="2"
                                android:textSize="20dp"
                                android:textColor="#224d88"
                                android:textIsSelectable="true" />

                            <ImageButton
                                android:layout_width="33dp"
                                android:layout_height="40dp"
                                android:id="@+id/act_tabata_edit_cool_down_plus_button"
                                android:layout_gravity="center_vertical"
                                android:layout_weight="0.12"
                                android:background="@drawable/button_selector_plus" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>

        </ScrollView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:layout_weight="0.8"
        android:background="#ffffff"
        android:orientation="horizontal">

        <Button
            android:id="@+id/act_tabata_edit_save_button"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center_horizontal"
            android:layout_margin="0dp"
            android:background="@drawable/button_selector"
            android:elevation="1dp"
            android:text="@string/save"
            android:textColor="#ffffff"
            android:textSize="40dp" />
    </LinearLayout>

</LinearLayout>